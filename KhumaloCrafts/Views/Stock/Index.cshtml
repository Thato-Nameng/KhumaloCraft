@model IEnumerable<KhumaloCrafts.ViewModels.StockDisplayModel>
@{
    ViewData["Title"] = "Stock";
}
h2>Stocks</h2>

<form asp-action="Index" method="get" class="my-2 d-flex gap-2">
    <input type="text" name="sTerm" class="form-control w-25" placeholder="Search by book" />
    <button type="submit" class="btn btn-primary">Find</button>
    <a asp-action="Index" asp-controller="Stock" class="btn btn-primary">Clear</a>
</form>

<table class="table table-bordered">
    <tr>
        <th>Craft</th>
        <th>Stock</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CraftName</td>
            <td>@item.Availability</td>
            <td>
                <a asp-action="ManangeStock" asp-controller="Stock" asp-route-bookId="@item.CraftId" class="btn btn-info"> Update Stock</a>
            </td>
        </tr>
    }
</table>

