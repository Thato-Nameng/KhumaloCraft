@using KhumaloCrafts.ViewModels
@model KhumaloCrafts.ViewModels.StockDTO
@{
    ViewData["Title"] = "Manage Stock";
}

<div style="width:50%">
    <h2> Manage Stock </h2>
    <a asp-action="Index" asp-controller="Stock" class="btn btn-primary">Back</a>
    <form asp-action="ManangeStock">
        <input type="hidden" asp-for="CraftId" />

        <div class="my-2">
            <label>Quantity</label>
            <input type="number" class="form-control" asp-for="Availability" />
            <span asp-validation-for="Availability" class="text-danger"></span>
        </div>

        <div class="my-2">
            <button type="submit" class="btn btn-info">Update</button>
        </div>
    </form>
</div>
