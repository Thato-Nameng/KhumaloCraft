@model KhumaloCrafts.ViewModels.OrderDetailModelDTO
@{

}

<div class="modal fade" id="modal-@Model.DivId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Order Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <tr>
                        <th>Craft</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Availability</th>
                        <th>Total Price</th>
                    </tr>
                    @foreach (var item in Model.OrderDetail)
                    {
                        <tr>
                            <td>@item.Craft.CraftName</td>
                            <td>@item.Craft.Category.CategoryName</td>
                            <td>@item.UnitPrice</td>
                            <td>@item.Availability</td>
                            <td>@(item.Availability * item.UnitPrice)</td>
                        </tr>
                    }
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
